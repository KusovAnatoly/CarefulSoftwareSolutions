<Page x:Class="Messages.Desktop.UWP.Views.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Messages.Desktop.UWP.Views.Settings"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      Background="{StaticResource SystemControlChromeLowAcrylicWindowBrush}"
      FontFamily="Segoe UI Symbol">

    <Grid Margin="10">

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto" />

            <RowDefinition />

        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="9*" />

                <ColumnDefinition Width="Auto" />

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>

            <Button HorizontalContentAlignment="Left"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Grid.Row="0"
                    Grid.Column="1">

                <Button.Content>

                    <FontIcon Glyph="&#xED14;" />

                </Button.Content>

            </Button>

            <Button Content="Редактировать"
                    Style="{StaticResource TextBlockButtonStyle}" />

            <Grid Grid.Row="1"
                  Grid.Column="0">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="Auto" />

                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <PersonPicture Grid.Column="0"
                               MinWidth="250"
                               MinHeight="250"
                               Margin="50"
                               ProfilePicture="https://docs.microsoft.com/windows/uwp/contacts-and-calendar/images/shoulder-tap-static-payload.png"
                               HorizontalAlignment="Left" />

                <StackPanel Orientation="Vertical"
                            Grid.Column="1">

                    <TextBlock Text="Иванов"
                               Style="{StaticResource HeaderTextBlockStyle}" />
                    <TextBlock Text="Иван"
                               Style="{StaticResource HeaderTextBlockStyle}" />
                    <TextBlock Style="{StaticResource SubheaderTextBlockStyle}">
                        <Run Text="+7 (905) 772-78-50" />
                        <Run Text="●" />
                        <Run Text="@IvanovIvan" />
                    </TextBlock>
                    <TextBlock Text=""
                               Style="{StaticResource SubheaderTextBlockStyle}" />


                </StackPanel>

            </Grid>

        </Grid>

        <ScrollViewer  Grid.Row="1"
                       VerticalScrollBarVisibility="Auto">

            <StackPanel Orientation="Vertical">


                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,10">

                    <controls:NavigationViewItem Content="Анатолий"
                                                 Icon="Account"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch" />
                    <controls:NavigationViewItem Content="Добавить аккаунт"
                                                 Icon="Add"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch" />

                </StackPanel>
                <controls:NavigationViewItemSeparator />
                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,10">

                    <controls:NavigationViewItem Content="Избранные сообщения"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE734;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Недавние звонки"
                                                 Icon="Phone"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch" />

                    <controls:NavigationViewItem Content="Устройства"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xE703;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Папки с чатами"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xe838;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                </StackPanel>
                <controls:NavigationViewItemSeparator />
                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,10">

                    <controls:NavigationViewItem Content="Оповещения и звуки"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xea8f;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Приватность и безопасность"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xe72e;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Данные и хранилище"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xeda2;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Внешний вид"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xe771;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Язык"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xe774;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Стикеры и эмодзи"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xe76e;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                </StackPanel>
                <controls:NavigationViewItemSeparator />
                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,10">

                    <controls:NavigationViewItem Content="Задать вопрос"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xED15;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Часто задаваемые вопросы"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xf142;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Content="Новые возможности"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                        <controls:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xea80;" />
                        </controls:NavigationViewItem.Icon>
                    </controls:NavigationViewItem>

                </StackPanel>
            </StackPanel>

        </ScrollViewer>

    </Grid>

</Page>

